<% layout('layouts/boilerplate.ejs') %>

<body>
    <div class="row">
        <div class="col-md-8 offset-3">
            <h1 class="mt-3 mb-4">Listing Details :</h1>
        </div>
        <div class="card col-md-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img"
                alt="listing-img">
            <div class="card-body mt-2">
                <p class="card-text mt-2">
                    <b>
                        <%= listing.title %>
                    </b><br>
                    <%= listing.description %><br>
                    â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
                    <%= listing.location %><br>
                    <%= listing.country %>
                </p>
            </div>
        </div>

        <div class="btns mb-5">
            <a href="/listings/<%= listing._id %>/edit"
                class="btn btn-dark col-1 offset-3">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE"
                method="post">
                <button
                    class="btn offset-5 px-4 add-btn">Delete</button>
            </form>
        </div>
    </div>
</body>
