<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>All Users</title>
    </head>
    <body>
        <table border="4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% for(users of result){ %>
                <tr>
                    <td><%= users.id %></td>
                    <td><%= users.username %></td>
                    <td><%= users.email %></td>
                    <td><%= users.password %></td>
                    <td>
                        <form action="/user/<%= users.id %>/edit"
                            method="get">
                            <button>Edit username</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
